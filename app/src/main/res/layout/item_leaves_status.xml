<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_leaves_container_status"
    android:paddingBottom="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/textView_item_leaves_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Casual Leave (full day)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_item_leaves_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="@+id/textView_item_leaves_type"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_type" />

    <TextView
        android:id="@+id/textView_item_leaves_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="@+id/textView_item_leaves_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_date" />

    <TextView
        android:id="@+id/textView_item_leaves_applied_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#474545"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/label_item_leaves_applied_on"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_applied_on" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_applied_on" />

    <TextView
        android:id="@+id/label_item_leaves_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/textView_item_leaves_applied_on"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/label_item_leaves_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/label_item_leaves_by"
        app:layout_constraintTop_toBottomOf="@+id/label_item_leaves_by" />

    <TextView
        android:id="@+id/label_item_leaves_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/label_item_leaves_on"
        app:layout_constraintTop_toBottomOf="@+id/label_item_leaves_on" />

    <TextView
        android:id="@+id/textview_item_leaves_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_by" />

    <TextView
        android:id="@+id/textview_item_leaves_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_on" />

    <TextView
        android:id="@+id/textView_item_leaves_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textColor="#474545"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_remark" />

    <TextView
        android:id="@+id/label_item_leaves_applied_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Applied On : "
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_reason" />
</androidx.constraintlayout.widget.ConstraintLayout>