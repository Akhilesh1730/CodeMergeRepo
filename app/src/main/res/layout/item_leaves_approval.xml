<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_leaves_container_status"
    android:paddingBottom="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/textView_item_leaves_approval_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Casual Leave (full day)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_item_leaves_approval_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="@+id/textView_item_leaves_approval_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_approval_name" />

    <TextView
        android:id="@+id/textView_item_leaves_approval_leave_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="@+id/textView_item_leaves_approval_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_approval_date" />

    <TextView
        android:id="@+id/textView_item_leaves_approval_applied_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#474545"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/label_item_leaves_approval_applied_on"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_approval_applied_on" />

    <View
        android:id="@+id/view_approval"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_approval_applied_on" />
    <TextView
        android:id="@+id/label_item_leaves_approval_applied_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Applied On : "
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_leaves_approval_leave_type" />

    <EditText
        android:id="@+id/edittext_item_leaves_approval_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:paddingVertical="16dp"
        android:paddingStart="16dp"
        android:textSize="16sp"
        android:hint="Remark"
        android:visibility="gone"
        android:background="@drawable/shape_dayinout_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_approval" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_item_leaves_approval_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_markattendance_buttons"
        android:text="Approve"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edittext_item_leaves_approval_remark"
        app:layout_constraintTop_toBottomOf="@+id/edittext_item_leaves_approval_remark" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_item_leaves_approval_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Reject"
        android:visibility="gone"
        android:background="@drawable/shape_markattendance_buttons_white"
        app:layout_constraintEnd_toStartOf="@+id/button_item_leaves_approval_approve"
        app:layout_constraintTop_toTopOf="@+id/button_item_leaves_approval_approve" />

    <TextView
        android:id="@+id/label_item_leaves_approval_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Remark : "
        android:textColor="#474545"
        app:layout_constraintStart_toStartOf="@+id/view_approval"
        app:layout_constraintTop_toBottomOf="@+id/view_approval" />

    <TextView
        android:id="@+id/textview_item_leaves_approval_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#474545"
        app:layout_constraintStart_toEndOf="@+id/label_item_leaves_approval_remark"
        app:layout_constraintTop_toTopOf="@+id/label_item_leaves_approval_remark" />

    <TextView
        android:id="@+id/textView_item_leaves_approval_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Approved"
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/label_item_leaves_approval_remark"
        app:layout_constraintTop_toBottomOf="@+id/label_item_leaves_approval_remark" />

</androidx.constraintlayout.widget.ConstraintLayout>